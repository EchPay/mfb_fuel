{{ html_anchor('fanpage/dashboard/'~ page_id, '<i class="glyphicon glyphicon-arrow-left"></i> Back', {'class': 'help-block'}) }}

{{ form_open('fanpage/edit_post') }}

<div class="form-group clearfix">
    <label class="control-label">Message</label>
    <div class="">
        <textarea class="form-control col-md-10" name="message" type="text" rows="5">{{ post.content.message }}</textarea>
    </div>
</div>

<div class="form-group clearfix">
    <label class="control-label">Link to image</label>
    <div class="row">
        <div class="col-md-6 clearfix">
            <input class="form-control col-md-10" name="link" value="{{ post.content.url }}" />
        </div>
{#        <br/>#}
        <div class="col-md-6 clearfix">
            <img class="img-thumbnail img-responsive" src="{{ post.content.url }}" />
        </div>
    </div>
</div>

{#<div class="form-group">
    <label>Choose Image</label>
    <input type="file" name="image">
</div>
#}        
<div class="form-group clearfix">
    <label class="control-label">Push to facebook</label>
    <div class="">
        <label class="radio-inline">
            <input type="radio" name="push_facebook_on" value="1" checked=""> Yes
        </label>
        <label class="radio-inline">
          <input type="radio" name="push_facebook_on" value="0"> No
        </label>                  
    </div>
</div>

<div class="form-group clearfix">
    <label class="control-label">Publish now</label>
    <div class="">
        <label class="radio-inline">
            <input type="radio" name="publish_instantly" value="1"> Yes
        </label>
        <label class="radio-inline">
          <input type="radio" name="publish_instantly" value="0" checked> No
        </label>                  
    </div>
</div>
<div class="form-group clearfix">
    <label class="control-label">Time</label>
    <div class="">
        <input class ="form-control col-md-10 datetime-picker" name="scheduled_publish_time" type="text" value="{{ post.content.scheduled_publish_time }}"/>
    </div>
</div>

<div class="form-group">
    <input class ="btn btn-primary" type="submit" name="submit" value="submit" />
</div>

<div class="hidden form-group">
    <input class ="form-control" type="hidden" name="type" value="2" />
    <input class ="form-control" type="hidden" name="post_id" value="{{ post.id }}" />
    <input class ="form-control" type="hidden" name="page_id" value="{{page_id}}" />
</div>

{{ form_close() }}