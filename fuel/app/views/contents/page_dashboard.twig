{% set i = 1 %}
{{ html_anchor('fanpage/add_status/'~ page_id, 'Add new post', {'class': 'btn btn-primary pull-right'} ) }}
{{ html_anchor('fanpage/index', '<i class="glyphicon glyphicon-arrow-left"></i> Back', {'class': 'help-block'}) }}
<div class="table-responsive">
    <table id="page-dashboard-table" class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th style="width: 30%">Message</th>
                <th>Author</th>
                <th>Modifier</th>
                <th>Modified Time</th>
                <th>Pushed?</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for item in post_list %}
                <tr>
                    <td>{{ i }} {% set i = i + 1%}</td>
                    <td>{{ item.content.message }}</td>
                    <td>@{{ item.author }}</td>
                    <td>@{{ item.modifier }}</td>
                    <td><span>{{ item.date_modified }}</span></td>
                    <td class="push-fb"><i class="push-fb-yes glyphicon glyphicon-ok"></i></td>
                    <td>
                        {{ html_anchor('fanpage/index', "<i class='fa fa-list'></i> E", {'class': 'btn btn-outline btn-success' }) }}
                        {{ html_anchor('fanpage/index', "<i class='fa fa-times'></i> D", {'class': 'btn btn-outline btn-danger btn-delete-page'}) }}
                    </td>
                </tr>                
            {% endfor %}
        </tbody>
    </table>
</div>
<!-- /.table-responsive -->
